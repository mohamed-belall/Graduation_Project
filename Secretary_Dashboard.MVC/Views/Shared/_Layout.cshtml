<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Secretary_Dashboard.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Secretary_Dashboard.MVC.styles.css" asp-append-version="true" />
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/secretary-dashboard.css" />


</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg NAV-Main-Color  ">  @* navbar-dark brand-blue *@
            <div class="container-fluid">
                <a class="navbar-brand fw-bold cBRAND" asp-controller="Home" asp-action="index">Balto</a>
        
                <button class="navbar-toggler Main-Color " type="button" data-bs-toggle="collapse"
                        data-bs-target="#mainNav" aria-controls="mainNav" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
        
                <div class="collapse navbar-collapse" id="mainNav">
                  <ul class="navbar-nav w-100 d-flex justify-content-evenly mb-2 mb-lg-0">
                        <li class="nav-item"><a class="nav-link text-white NAV-Main-Color" href="/AddPatient/Index">ADD NEW</a></li>
                        <li class="nav-item"><a class="nav-link text-white NAV-Main-Color" href="/Appointment/index">APPOINTNETS</a></li>
                        <li class="nav-item"><a class="nav-link text-white NAV-Main-Color" href="/Queue/index">QUEUE</a></li>
@*                         <li class="nav-item"><a class="nav-link text-white NAV-Main-Color" href="#">PATIENT</a></li>
                    <li class="nav-item"><a class="nav-link text-white NAV-Main-Color" href="#">MEDICINE</a></li> *@
                        <li class="nav-item"><a class="nav-link cEmergency NAV-Main-Color" href="/Emergency/index">EMERGENCY</a></li>
                  </ul>
                </div>           
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Secretary_Dashboard.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>


</html>
