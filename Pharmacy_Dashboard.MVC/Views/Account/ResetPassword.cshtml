@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="ResetPassword">

    <div class="form-steps">
        <!-- Left side (Sidebar) -->
        <div class="sidebar">
            <img src="~/assets/images/avatar-placeholder.jpg" alt="Logo" class="logo" />
            <div class="steps">
                <div class="step active">Reset Your Password</div>
            </div>
        </div>

        <!-- Right side (Form) -->
        <div class="right-panel">
            <h2>Reset Your Password</h2>

            <div asp-validation-summary="All"></div>

            <div class="input-group">
                <label>New Password</label>
                <input asp-for="NewPassword" type="password" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label>Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="submit" class="btn-custom btn-primary" value="Reset Password" />

            <div class="text-center">
                <p>Remembered your password? <a asp-action="Login">Login here</a></p>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
