@model LoginViewModel 
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="Login">

    <div class="form-steps">
        <!-- Left side (Sidebar) -->
        <div class="sidebar">
            <img src="~/assets/images/avatar-placeholder.jpg" alt="Logo" class="logo" />
            <div class="steps">
                <div class="step active">Welcome Back!</div>
            </div>
        </div>

        <!-- Right side (Form) -->
        <div class="right-panel">
            <h2>Login to Your Account</h2>

            <div asp-validation-summary="All"></div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show text-center shadow-sm py-3 px-4 rounded-3" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i>
                    @TempData["Success"]
                    <button type="button" class="btn-close position-absolute end-0 me-3 mt-1" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="input-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label>Password</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="input-group">
                <input asp-for="RememberMe" type="checkbox" />
                <label asp-for="RememberMe">Remember Me</label>
            </div>

            <input type="submit" class="btn-custom btn-primary" value="Login" />

            <div class="text-center">
                <p>Don't have an account? <a asp-action="SignUp">Register here</a></p>
                <p><a asp-action="ForgetPassword">Forgot Password?</a></p>
            </div>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}



