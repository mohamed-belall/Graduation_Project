@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forget Password";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<form asp-action="SendResetLink">
    <div class="form-steps">
        <!-- Left side (Sidebar) -->
        <div class="sidebar">
            <img src="~/assets/images/avatar-placeholder.jpg" alt="Logo" class="logo" />
            <div class="steps">
                <div class="step active">Reset Password</div>
            </div>
        </div>

        <!-- Right side (Form) -->
        <div class="right-panel">
            <h2>Forgot Your Password?</h2>
            <p>Enter your email address below and we'll send you a link to reset your password.</p>

            <div asp-validation-summary="All"></div>

            <div class="input-group">
                <label>Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <input type="submit" class="btn-custom btn-primary" value="Send Reset Link" asp-action="SendResetLink" />

            <div class="text-center" style="margin-top: 10px;">
                <a asp-action="Login">Back to Login</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
