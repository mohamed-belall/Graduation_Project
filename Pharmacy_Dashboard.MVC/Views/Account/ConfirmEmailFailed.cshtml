@{
    ViewData["Title"] = "Email Confirmation Failed";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="form-steps">
    <!-- Sidebar -->
    <div class="sidebar">
        <img src="https://static.vecteezy.com/system/resources/thumbnails/026/375/249/small/ai-generative-portrait-of-confident-male-doctor-in-white-coat-and-stethoscope-standing-with-arms-crossed-and-looking-at-camera-photo.jpg" alt="Error Icon" class="logo" />
        <h2 class="sidebar-title text-danger">Confirmation Failed</h2>
        <p class="sidebar-desc">We couldn't confirm your email address. Please check your link or contact support for help.</p>
        <div class="sidebar-divider"></div>
        <ul class="sidebar-features">
            <li><span class="sidebar-icon">❌</span> Invalid or Expired Link</li>
            <li><span class="sidebar-icon">🔒</span> Secure Process</li>
            <li><span class="sidebar-icon">💬</span> Support Available</li>
        </ul>
        <div class="sidebar-footer">
            <a href="mailto:graduation.balto@gmail.com" class="sidebar-support">Need help?</a>
        </div>
    </div>

    <!-- Right Panel -->
    <div class="right-panel text-center">
        <h2 class="header-txt text-danger">Email Confirmation Failed</h2>
        <p class="text-danger">@ViewBag.Error</p>
        <div class="action-row" style="margin-top: 30px">
            <a asp-action="Login" class="btn-custom btn-primary w-100">Back to Login</a>
        </div>
    </div>
</div>

<style>

    .header-txt {
        display: flex;
        justify-content: center;
    }

    .sidebar {
        background: linear-gradient(135deg, #1e2a5a 80%, #3a4a8c 100%);
        color: #fff;
        padding: 40px 30px 30px 30px;
        width: 50%;
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        min-height: 600px;
        box-shadow: 2px 0 16px rgba(30,42,90,0.08);
    }

        .sidebar .logo {
            width: 150px;
            margin-bottom: 18px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        }

    .sidebar-title {
        font-size: 1.7rem;
        font-weight: 700;
        margin-bottom: 10px;
        letter-spacing: 1px;
    }

    .sidebar-desc {
        font-size: 1.05rem;
        color: #e0e6f7;
        margin-bottom: 24px;
        text-align: center;
    }

    .sidebar-divider {
        width: 60px;
        height: 3px;
        background: #0073ff;
        border-radius: 2px;
        margin: 0 auto 18px auto;
    }

    .sidebar-features {
        list-style: none;
        padding: 0;
        margin: 0 0 32px 0;
        width: 100%;
    }

        .sidebar-features li {
            display: flex;
            align-items: center;
            font-size: 1rem;
            margin-bottom: 12px;
            color: #c9d6ff;
        }

    .sidebar-icon {
        font-size: 1.2em;
        margin-right: 10px;
    }

    .sidebar-footer {
        position: absolute;
        bottom: 24px;
        left: 0;
        width: 100%;
        text-align: center;
    }

    .sidebar-support {
        color: #b3c6ff;
        font-size: 0.97rem;
        text-decoration: underline;
        transition: color 0.2s;
    }

        .sidebar-support:hover {
            color: #fff;
        }

    /* *********************************************** */


    /* ************************************************** */
    .action-row {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 24px;
        margin-bottom: 16px;
    }

    .btn-custom.btn-primary.w-100 {
        width: 100% !important;
        margin-bottom: 16px;
    }

    .links-row {
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 12px;
        font-size: 0.97rem;
    }

    .action-link {
        color: #1e90ff !important;
        text-decoration: none;
        transition: color 0.2s;
        font-weight: 500;
    }

        .action-link:hover {
            color: #0056b3 !important;
            text-decoration: underline;
        }

    .divider {
        color: #bbb;
        font-size: 1.1em;
        user-select: none;
    }

</style>
