    flex-direction: column;
    align-items: center;
    position: relative;
    min-height: 600px;
    box-shadow: 2px 0 16px rgba(30,42,90,0.08);
}

.sidebar .logo {
    width: 150px;
    margin-bottom: 18px;
    border-radius: 12px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.08);
}

.sidebar-title {
    font-size: 1.7rem;
    font-weight: 700;
    margin-bottom: 10px;
    letter-spacing: 1px;
}

