@{
    ViewData["Title"] = "Check Your Box";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    var message = TempData["Message"] as string ?? "Please check your inbox.";
    var resendAction = TempData["ResendAction"] as string ?? "ForgetPassword";
}

<div class="form-steps">
    <!-- Sidebar -->
    <div class="sidebar">
        <img src="https://static.vecteezy.com/system/resources/thumbnails/026/375/249/small/ai-generative-portrait-of-confident-male-doctor-in-white-coat-and-stethoscope-standing-with-arms-crossed-and-looking-at-camera-photo.jpg" alt="Logo" class="logo" />
        <h2 class="sidebar-title">Email Sent!</h2>
        <p class="sidebar-desc">We’ve sent a password reset link to your email address.</p>
        <div class="sidebar-divider"></div>
        <ul class="sidebar-features">
            <li><span class="sidebar-icon">🔒</span> Secure Recovery</li>
            <li><span class="sidebar-icon">⚡</span> Fast Process</li>
            <li><span class="sidebar-icon">💊</span> Pharmacy Tools</li>
        </ul>
        <div class="sidebar-footer">
            <a href="mailto:support@pharmacy.com" class="sidebar-support">Need help?</a>
        </div>
    </div>

    <!-- Form Panel -->
    <div class="right-panel text-center">
        <h2 class="header-txt">Check Your Email</h2>
        <p>@message</p>

        <div class="action-row">
            <a href="https://mail.google.com/mail/u/0/#inbox" target="_blank" class="btn-custom btn-primary w-100 mb-3 open-inbox-btn">
                <span class="material-icons" style="vertical-align:middle;margin-right:6px;">mail</span>
                Open Your Inbox
            </a>
            <div class="links-row">
                <a asp-action="Login" class="action-link">
                    <span class="material-icons" style="font-size:1em;vertical-align:middle;">login</span>
                    Back to Login
                </a>
            </div>
        </div>

        <div class="divider my-3"><span>or</span></div>

        <div class="mt-2">
            <p>
                Didn't receive the email?
                <a asp-action="@resendAction" class="action-link">
                    <span class="material-icons" style="font-size:1em;vertical-align:middle;">refresh</span>
                    Try again
                </a>
            </p>
        </div>
    </div>
</div>

<style>
.header-txt {
    display: flex;
    justify-content: center;
}

