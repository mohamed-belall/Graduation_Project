    font-size: 1.05rem;
    color: #e0e6f7;
    margin-bottom: 24px;
    text-align: center;
}

.sidebar-divider {
    width: 60px;
    height: 3px;
    background: #0073ff;
    border-radius: 2px;
    margin: 0 auto 18px auto;
}

.sidebar-features {
    list-style: none;
    padding: 0;
    margin: 0 0 32px 0;
    width: 100%;
}

.sidebar-features li {
    display: flex;
    align-items: center;
    font-size: 1rem;
    margin-bottom: 12px;
    color: #c9d6ff;
}

.sidebar-icon {
    font-size: 1.2em;
    margin-right: 10px;
}

.sidebar-footer {
    position: absolute;
    bottom: 24px;
    left: 0;
    width: 100%;
    text-align: center;
}

