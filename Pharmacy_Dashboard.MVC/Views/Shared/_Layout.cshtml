@using Graduation_Project.Core.Constants
@using Microsoft.AspNetCore.Identity
                        @using System.Security.Claims


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pharmacy Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* Optional: Link to component-specific CSS if needed *@
    @* <link rel="stylesheet" href="~/YourProjectName.styles.css" asp-append-version="true" /> *@

</head>
<body>
    <div class="page-wrapper">
        <aside class="sidebar">
            <div class="sidebar-header">
                <a href="#" class="sidebar-logo">
                    <span class="logo-icon-wrapper"><i class="fas fa-prescription-bottle"></i></span>
                    @* <span class="logo-text">Pharmacy</span> You can add text if needed *@
                </a>
                <button class="sidebar-toggle-btn" id="sidebarToggle">
                    @* Add JS for this later *@
                    <i class="fas fa-bars"></i>
                </button>
            </div>
            <nav class="sidebar-nav">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        @* Add 'active' class dynamically based on current page *@
                        <a class="nav-link active" asp-area="" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-th-large fa-fw me-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Order" asp-action="Index">
                            <i class="fas fa-shopping-cart fa-fw me-2"></i> Order
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Stock" asp-action="Index">
                            <i class="fas fa-boxes fa-fw me-2"></i> Stock
                        </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Pharmacist" asp-action="EditProfile">
                            <i class="fas fa-user-edit fa-fw me-2"></i> Edit Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Settings" asp-action="EditProfile">
                            <i class="fas fa-cog fa-fw me-2"></i> Settings
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>

        <div class="main-content-wrapper">
            <header class="header">
                <div class="header-left d-flex align-items-center gap-2">
                    <img src="~/assets/images/avatar-placeholder.jpg" alt="Balto Logo" style="width: 40px; height: 40px; object-fit: contain;" class="rounded-circle shadow-sm border border-primary border-2">
                    <span class="fw-bold fs-4 text-primary" style="letter-spacing: 1px; font-family: 'Cairo', sans-serif;">


                        @if (User.Identity.IsAuthenticated)
                        {
                            
                           
                            <div class="welcome-message">
                                Welcome @User.FindFirstValue(ClaimTypes.Name)
                            </div>
                        }
                    </span>
                   
                </div>

                <div class="header-right ms-auto">
                    <div class="nav-item dropdown me-3">
                        <a class="nav-link position-relative text-secondary" href="#" id="navbarDropdownNotifications" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-bell fs-5"></i>
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                3
                                <span class="visually-hidden">unread notifications</span>
                            </span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3 p-0 overflow-hidden" style="min-width: 280px;" aria-labelledby="navbarDropdownNotifications">
                            <li>
                                <h6 class="dropdown-header bg-light fw-bold text-dark">Notifications</h6>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2" href="#">
                                    <i class="fas fa-envelope-open-text text-primary me-2"></i>
                                    <span>New message from John</span>
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2" href="#">
                                    <i class="fas fa-user-plus text-success me-2"></i>
                                    <span>New user registered</span>
                                </a>
                            </li>
                            <li><hr class="dropdown-divider my-1"></li>
                            <li>
                                <a class="dropdown-item text-center text-primary py-2 fw-semibold" href="#">
                                    View All Notifications
                                </a>
                            </li>
                        </ul>
                    </div>

                    <div class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2 py-1 px-2 rounded user-profile" href="#" id="navbarDropdownUser" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="position-relative">
                                <img src="~/assets/images/avatar-placeholder.jpg"
                                     alt="User Avatar"
                                     class="rounded-circle border border-2 border-primary shadow-sm"
                                     style="width: 45px; height: 45px; object-fit: cover;">
                            </div>
                            <div class="d-none d-md-block text-start">
                                <span class="fw-semibold text-dark">Mohamed Belal <i class="fas fa-chevron-down fa-xs ms-1 text-muted"></i></span><br />
                                <small class="text-muted">Admin</small>
                            </div>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm rounded-3 mt-2" aria-labelledby="navbarDropdownUser" style="min-width: 220px;">
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2" asp-controller="Pharmacist" asp-action="EditProfile">
                                    <i class="fas fa-user fa-fw me-2 text-primary"></i> Profile
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2" asp-controller="Pharmacist" asp-action="EditProfile">
                                    <i class="fas fa-cog fa-fw me-2 text-warning"></i> Settings
                                </a>
                            </li>
                            <li><hr class="dropdown-divider my-1"></li>
                            <li>
                                <a class="dropdown-item d-flex align-items-center py-2 text-danger" asp-action="SignOut" asp-controller="Account">
                                    <i class="fas fa-sign-out-alt fa-fw me-2"></i> Logout
                                </a>
                            </li>
                        </ul>
                    </div>

                </div>
            </header>

            <main class="content-area p-4">
                @RenderBody()
            </main>

        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>